<Window x:Class="College.DialogUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:College"
        mc:Ignorable="d"
        Title="DialogUpdate" Height="440" Width="630" Closed="Window_Closed">
    <Grid Background="#FFFFF093">
        <ItemsControl x:Name="where" Margin="20,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom" ItemsSource="{Binding singleton.rowsWhere}" Height="300" Width="300">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="{Binding text}"/>
                        <TextBox Text="{Binding formul, Mode=OneWayToSource}"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Label x:Name="TableName" Content="Label" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="UpdateButton" Content="Обновить" HorizontalAlignment="Left" Margin="424,357,0,0" VerticalAlignment="Top" Width="105" Click="UpdateButton_Click" Height="30" Background="#FFF5DB3A" BorderBrush="#FF3C3C3C"/>

    </Grid>
</Window>
